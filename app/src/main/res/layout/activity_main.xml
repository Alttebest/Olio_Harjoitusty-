<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnChangeToAddLutemon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:onClick="switchToAddLutemon"
        android:text="Lisää Lutemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangeToListLutemons"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToListLutemons"
        android:text="Listaa Lutemonit"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToAddLutemon"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToAddLutemon" />

    <Button
        android:id="@+id/btnChangeToMoveLutemons"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToMoveLutemons"
        android:text="Siirrä Lutemoneja"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToListLutemons"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToListLutemons" />

    <Button
        android:id="@+id/btnChangeToBattlefield"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToBattlefield"
        android:text="Taisteluareenalle"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToMoveLutemons"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToMoveLutemons" />
</androidx.constraintlayout.widget.ConstraintLayout>