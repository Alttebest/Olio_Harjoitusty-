<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnChangeToAddLutemon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:onClick="switchToAddLutemon"
        android:text="Lisää Lutemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangeToListLutemons"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToListLutemons"
        android:text="Listaa Lutemonit"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToAddLutemon"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToAddLutemon" />

    <Button
        android:id="@+id/btnChangeToMoveLutemons"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToMoveLutemons"
        android:text="Siirrä Lutemoneja"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToListLutemons"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToListLutemons" />

    <Button
        android:id="@+id/btnChangeToBattlefield"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="switchToBattlefield"
        android:text="Taisteluareenalle"
        app:layout_constraintStart_toStartOf="@+id/btnChangeToMoveLutemons"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToMoveLutemons" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ohjelmassa voit luoda lutemoneja, siirrellä niitä, sekä laittaa ne taistelemaan keskenään. Listaamalla lutemonit näet niiden tiedot ja tilastot. Taistellaksesi Lutemoneilla vähintään kahden tulee olla taisteluareenalla. Taistelun voittaja saa kokemuspisteen ja häviäjä siirtyy takaisin kotiin nuolemaan näppejään. Taistelun aikana myös jokainen treenaamassa oleva lutemoni saa kokemuspisteen. Lutemonit tallentuvat ja siirtyvät kotiin kun lopetat pelmaaisen."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeToBattlefield" />
</androidx.constraintlayout.widget.ConstraintLayout>